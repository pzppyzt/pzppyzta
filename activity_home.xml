<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.one.HomeActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/select_text"
            android:id="@+id/btn_home"
            android:drawableTop="@drawable/select_four"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:gravity="center"
            android:text="专题"
            android:textColor="@drawable/select_text"
            android:drawableTop="@drawable/select_three"
            android:id="@+id/btn_special"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:gravity="center"
            android:text="分类"
            android:textColor="@drawable/select_text"
            android:id="@+id/btn_sort"
            android:drawableTop="@drawable/select_five"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/btn_ShoppingCar"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/select_text"
            android:drawableTop="@drawable/select_two"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/select_text"
            android:id="@+id/btn_mine"
            android:drawableTop="@drawable/select_one"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>